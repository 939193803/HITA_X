<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="12dp"
        android:height="12dp"
        android:gravity="center">
        <shape
            android:shape="oval"
            android:tint="?attr/backgroundColorBottomAsTint"
            android:tintMode="src_over">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:width="24dp"
        android:height="24dp">
        <shape
            android:shape="oval"
            android:tint="?attr/backgroundColorBottomAsTint"
            android:tintMode="src_over">
            <solid android:color="#44ffffff" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
</layer-list>