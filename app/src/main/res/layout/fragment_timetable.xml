<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/month"
                android:layout_width="@dimen/timetable_label_width"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:gravity="center"
                android:text="12æœˆ"
                android:textColor="?attr/textColorPrimary"
                android:textSize="10sp"
                android:visibility="visible" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@drawable/element_round_grey"
                    android:backgroundTint="?attr/backgroundColorSecond"
                    android:backgroundTintMode="src_in"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/tt_monday"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@drawable/element_round_grey"
                    android:backgroundTint="?attr/backgroundColorSecond"
                    android:backgroundTintMode="src_in"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/tt_tuesday"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="10sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@drawable/element_round_grey"
                    android:backgroundTint="?attr/backgroundColorSecond"
                    android:backgroundTintMode="src_in"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/tt_wednesday"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@drawable/element_round_grey"
                    android:backgroundTint="?attr/backgroundColorSecond"
                    android:backgroundTintMode="src_in"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/tt_thursday"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@drawable/element_round_grey"
                    android:backgroundTint="?attr/backgroundColorSecond"
                    android:backgroundTintMode="src_in"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/tt_friday"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@drawable/element_round_grey"
                    android:backgroundTint="?attr/backgroundColorSecond"
                    android:backgroundTintMode="src_in"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/tt_saturday"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="10sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:background="@drawable/element_round_grey"
                    android:backgroundTint="?attr/backgroundColorSecond"
                    android:backgroundTintMode="src_in"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/tt_sunday"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="10sp" />
            </FrameLayout>

        </LinearLayout>

        <com.stupidtree.hitax.ui.widgets.VerticalNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.stupidtree.hitax.ui.main.timetable.views.LeftLabelView
                    android:id="@+id/labels"
                    android:layout_width="@dimen/timetable_label_width"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/timetable_date_height"
                    custom:timeLabelColor="?attr/textColorSecondary"
                    custom:timeLabelSize="11sp" />

                <com.stupidtree.hitax.ui.widgets.WrapContentHeightViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never" />
            </LinearLayout>
        </com.stupidtree.hitax.ui.widgets.VerticalNestedScrollView>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        app:tint="@color/white"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:srcCompat="@drawable/ic_baseline_settings_backup_restore_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>