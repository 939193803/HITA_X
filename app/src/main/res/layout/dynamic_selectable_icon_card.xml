<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="?attr/backgroundColorSecond"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/element_rounded_button_bg_grey"
                android:backgroundTint="?attr/backgroundColorBottomAsTint"
                android:backgroundTintMode="src_over"
                android:padding="8dp"
                android:tintMode="src_in"
                app:srcCompat="@drawable/ic_baseline_access_alarm_24"
                app:tint="?attr/colorControlNormal" />

            <com.stupidtree.hita.ui.widgets.FocusTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/give_me_notification_permission"
                android:textColor="?attr/textColorPrimary"
                android:textSize="16sp" />

            <com.stupidtree.hita.ui.widgets.FocusTextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/give_me_notification_permission"
                android:textColor="?attr/textColorSecondary"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</merge>